                            class="w-full text-left block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary-600 hover:bg-blue-50 transition"
                            onclick="closeMobileMenu()"
                        >
                            <i class="fas fa-user-plus mr-2"></i>Register
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <div class="pt-20"></div>
    </header>

    <script>
        // Track dropdown state
        let currentDropdown = null;
        let mobileMenuOpen = false;
        let currentMobileDropdown = null;

        // Close all dropdowns
        function closeAllDropdowns() {
            document.querySelectorAll('[id$="-dropdown"]').forEach(dropdown => {
                dropdown.classList.add('hidden');
                dropdown.setAttribute('aria-hidden', 'true');
            });
            document.querySelectorAll('[id$="-chevron"]').forEach(chevron => {
                chevron.classList.remove('transform', 'rotate-180');
            });
            document.querySelectorAll('[aria-expanded="true"]').forEach(button => {
                button.setAttribute('aria-expanded', 'false');
            });
            currentDropdown = null;
        }

        // Close all mobile dropdowns
        function closeAllMobileDropdowns() {
            document.querySelectorAll('[id^="mobile-"][id$="-dropdown"]').forEach(dropdown => {
                dropdown.classList.add('hidden');
                dropdown.setAttribute('aria-hidden', 'true');
            });
            document.querySelectorAll('[id^="mobile-"][id$="-chevron"]').forEach(chevron => {
                chevron.classList.remove('transform', 'rotate-180');
            });
            document.querySelectorAll('[aria-expanded="true"]').forEach(button => {
                if (button.id.includes('mobile-')) {
                    button.setAttribute('aria-expanded', 'false');
                }
            });
            currentMobileDropdown = null;
        }

        // Toggle dropdown
        function toggleDropdown(dropdownId) {
            const dropdown = document.getElementById(`${dropdownId}-dropdown`);
            const chevron = document.getElementById(`${dropdownId}-chevron`);
            const button = document.querySelector(`[aria-controls="${dropdownId}-dropdown"]`);

            if (currentDropdown === dropdownId) {
                dropdown.classList.add('hidden');
                dropdown.setAttribute('aria-hidden', 'true');
                chevron.classList.remove('transform', 'rotate-180');
                button.setAttribute('aria-expanded', 'false');
                currentDropdown = null;
            } else {
                closeAllDropdowns();
                dropdown.classList.remove('hidden');
                dropdown.setAttribute('aria-hidden', 'false');
                chevron.classList.add('transform', 'rotate-180');
                button.setAttribute('aria-expanded', 'true');
                currentDropdown = dropdownId;
            }
        }

        // Toggle mobile dropdown
        function toggleMobileDropdown(dropdownId) {
            const dropdown = document.getElementById(`${dropdownId}-dropdown`);
            const chevron = document.getElementById(`${dropdownId}-chevron`);
            const button = document.querySelector(`[aria-controls="${dropdownId}-dropdown"]`);

            if (currentMobileDropdown === dropdownId) {
                dropdown.classList.add('hidden');
                dropdown.setAttribute('aria-hidden', 'true');
                chevron.classList.remove('transform', 'rotate-180');
                button.setAttribute('aria-expanded', 'false');
                currentMobileDropdown = null;
            } else {
                closeAllMobileDropdowns();
                dropdown.classList.remove('hidden');
                dropdown.setAttribute('aria-hidden', 'false');
                chevron.classList.add('transform', 'rotate-180');
                button.setAttribute('aria-expanded', 'true');
                currentMobileDropdown = dropdownId;
            }
        }

        // Toggle mobile menu
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileMenuIcon = document.getElementById('mobile-menu-icon');
            const menuButton = document.querySelector('[aria-controls="mobile-menu"]');

            if (mobileMenuOpen) {
                mobileMenu.classList.add('hidden');
                mobileMenu.setAttribute('aria-hidden', 'true');
                mobileMenuIcon.classList.remove('fa-times');
                mobileMenuIcon.classList.add('fa-bars');
                menuButton.setAttribute('aria-expanded', 'false');
                closeAllMobileDropdowns();
            } else {
                mobileMenu.classList.remove('hidden');
                mobileMenu.setAttribute('aria-hidden', 'false');
                mobileMenuIcon.classList.remove('fa-bars');
                mobileMenuIcon.classList.add('fa-times');
                menuButton.setAttribute('aria-expanded', 'true');
            }

            mobileMenuOpen = !mobileMenuOpen;
        }

        // Close mobile menu
        function closeMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileMenuIcon = document.getElementById('mobile-menu-icon');
            const menuButton = document.querySelector('[aria-controls="mobile-menu"]');

            mobileMenu.classList.add('hidden');
            mobileMenu.setAttribute('aria-hidden', 'true');
            mobileMenuIcon.classList.remove('fa-times');
            mobileMenuIcon.classList.add('fa-bars');
            menuButton.setAttribute('aria-expanded', 'false');
            mobileMenuOpen = false;
            closeAllMobileDropdowns();
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.relative') && currentDropdown) {
                closeAllDropdowns();
            }
        });

        // Add scroll effect to navbar
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 10) {
                navbar.classList.add('shadow-lg', 'bg-white/95', 'backdrop-blur-sm');
            } else {
                navbar.classList.remove('shadow-lg', 'bg-white/95', 'backdrop-blur-sm');
            }
        });

        // Initialize navbar with scroll effect
        document.addEventListener('DOMContentLoaded', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 10) {
                navbar.classList.add('shadow-lg', 'bg-white/95', 'backdrop-blur-sm');
            }
            
            // Add keyboard navigation for dropdowns
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    closeAllDropdowns();
                    closeAllMobileDropdowns();
                }
            });
        });
    </script>
</body>
</html>