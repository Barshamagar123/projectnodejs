<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Team Member - Hotel Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="bg-gray-100">

  <div class="flex">
    <%- include("../sidebar.ejs") %>

    <div class="flex-1 p-6">
      <h1 class="text-2xl font-bold mb-6 text-gray-800">Add New Team Member</h1>

      <form action="/addTeamMember" method="POST" enctype="multipart/form-data" class="bg-white p-6 rounded-lg shadow-md space-y-6 max-w-3xl">

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Name -->
          <div>
            <label class="block mb-1 font-medium text-gray-700">Full Name</label>
            <input type="text" name="name" required class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500" />
          </div>

          <!-- Email -->
          <div>
            <label class="block mb-1 font-medium text-gray-700">Email</label>
            <input type="email" name="email" required class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500" />
          </div>

          <!-- Department -->
          <div>
            <label class="block mb-1 font-medium text-gray-700">Department</label>
            <select name="department" required class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500">
              <option value="">Select Department</option>
              <option>Front Office</option>
              <option>Food Production</option>
              <option>Food & Beverage</option>
              <option>Housekeeping</option>
            </select>
          </div>

          <!-- Position -->
          <div>
            <label class="block mb-1 font-medium text-gray-700">Position</label>
            <select name="position" required class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500">
              <option value="">Select Position</option>
              <option>Manager</option>
              <option>Head Chef</option>
              <option>Restaurant Manager</option>
              <option>Supervisor</option>
              <option>Staff</option>
              <option>Trainee</option>
            </select>
          </div>

          <!-- Join Date -->
          <div>
            <label class="block mb-1 font-medium text-gray-700">Join Date</label>
            <input type="date" name="joinDate" required class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500" />
          </div>

          <!-- Status -->
          <div>
            <label class="block mb-1 font-medium text-gray-700">Status</label>
            <select name="status" required class="w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500">
              <option value="Active">Active</option>
              <option value="On Leave">On Leave</option>
              <option value="Inactive">Inactive</option>
            </select>
          </div>

          <!-- Profile Image -->
          <div class="md:col-span-2">
            <label class="block mb-1 font-medium text-gray-700">Profile Image</label>
            <input type="file" name="image" accept="image/*" class="w-full border px-4 py-2 rounded-lg" />
          </div>
        </div>

        <!-- Submit Button -->
        <div class="text-right">
          <button type="submit" class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-2 rounded-lg">
            <i class="fas fa-save mr-2"></i>Save Member
          </button>
        </div>

      </form>
    </div>
  </div>

</body>
</html>
