                </form>
                <div class="mt-4 text-center text-sm text-gray-600">
                    Already have an account? 
                    <button onclick="hideModal('register-modal'); showModal('login-modal')" class="text-blue-600 hover:text-blue-500 ml-1">
                        Login here
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
    // Track which dropdown is currently open
    let currentDropdown = null;

    // Track mobile menu state
    let mobileMenuOpen = false;

    // Track mobile dropdown state
    let currentMobileDropdown = null;

    // Close all dropdowns
    function closeAllDropdowns() {
        document.querySelectorAll('[id$="-dropdown"]').forEach(dropdown => {
            dropdown.classList.add('hidden');
        });
        document.querySelectorAll('[id$="-chevron"]').forEach(chevron => {
            chevron.classList.remove('transform', 'rotate-180');
        });
        currentDropdown = null;
    }

    // Close all mobile dropdowns
    function closeAllMobileDropdowns() {
        document.querySelectorAll('[id^="mobile-"]').forEach(dropdown => {
            if (dropdown.id.includes('-dropdown')) {
                dropdown.classList.add('hidden');
            }
        });
        document.querySelectorAll('[id^="mobile-"]').forEach(chevron => {
            if (chevron.id.includes('-chevron')) {
                chevron.classList.remove('transform', 'rotate-180');
            }
        });
        currentMobileDropdown = null;
    }

    // Toggle dropdown
    function toggleDropdown(dropdownId) {
const dropdown = document.getElementById(`${dropdownId}-dropdown`);
const chevron = document.getElementById(`${dropdownId}-chevron`);
        if (currentDropdown === dropdownId) {
            dropdown.classList.add('hidden');
            chevron.classList.remove('transform', 'rotate-180');
            currentDropdown = null;
        } else {
            closeAllDropdowns();
            dropdown.classList.remove('hidden');
            chevron.classList.add('transform', 'rotate-180');
            currentDropdown = dropdownId;
        }
    }

    // Toggle mobile dropdown
    function toggleMobileDropdown(dropdownId) {
const dropdown = document.getElementById(`${dropdownId}-dropdown`);
const chevron = document.getElementById(`${dropdownId}-chevron`);

        if (currentMobileDropdown === dropdownId) {
            dropdown.classList.add('hidden');
            chevron.classList.remove('transform', 'rotate-180');
            currentMobileDropdown = null;
        } else {
            closeAllMobileDropdowns();
            dropdown.classList.remove('hidden');
            chevron.classList.add('transform', 'rotate-180');
            currentMobileDropdown = dropdownId;
        }
    }

    // Toggle mobile menu
    function toggleMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuIcon = document.getElementById('mobile-menu-icon');

        if (mobileMenuOpen) {
            mobileMenu.classList.add('hidden');
            mobileMenuIcon.classList.remove('fa-times');
            mobileMenuIcon.classList.add('fa-bars');
            closeAllMobileDropdowns();
        } else {
            mobileMenu.classList.remove('hidden');
            mobileMenuIcon.classList.remove('fa-bars');
            mobileMenuIcon.classList.add('fa-times');
        }

        mobileMenuOpen = !mobileMenuOpen;
    }

    // Close mobile menu
    function closeMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuIcon = document.getElementById('mobile-menu-icon');

        mobileMenu.classList.add('hidden');
        mobileMenuIcon.classList.remove('fa-times');
        mobileMenuIcon.classList.add('fa-bars');
        mobileMenuOpen = false;
        closeAllMobileDropdowns();
    }

    // Show modal
    function showModal(modalId) {
        const modal = document.getElementById(modalId);
const overlay = document.getElementById(`${modalId}-overlay`);        modal.classList.remove('hidden');
        overlay.classList.remove('hidden');

        setTimeout(() => {
            modal.classList.add('modal-enter-active');
        }, 10);
    }

    // Hide modal
    function hideModal(modalId) {
        const modal = document.getElementById(modalId);
const overlay = document.getElementById(`${modalId}-overlay`);        modal.classList.remove('modal-enter-active');
        overlay.classList.add('hidden');

        setTimeout(() => {
            modal.classList.add('hidden');
        }, 200);
    }

    // Close dropdowns when clicking outside
    document.addEventListener('click', (e) => {
        if (!e.target.closest('.relative') && currentDropdown) {
            closeAllDropdowns();
        }
    });

    // Add scroll effect to navbar
    window.addEventListener('scroll', () => {
        const navbar = document.getElementById('navbar');
        if (window.scrollY > 10) {
            navbar.classList.add('shadow-lg', 'bg-white/95', 'backdrop-blur-sm');
        } else {
            navbar.classList.remove('shadow-lg', 'bg-white/95', 'backdrop-blur-sm');
        }
    });

    // Initialize navbar with scroll effect
    document.addEventListener('DOMContentLoaded', () => {
        const navbar = document.getElementById('navbar');
        if (window.scrollY > 10) {
            navbar.classList.add('shadow-lg', 'bg-white/95', 'backdrop-blur-sm');
        }
    });
</script>

