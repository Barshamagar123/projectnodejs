<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hotel Management System</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen">
    <%- include('./partials/navbar.ejs') %>
  <!-- Hero Section -->
  <section class="relative h-screen flex items-center justify-center bg-gray-900 overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div 
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('/assets/cover.jpeg')"
    ></div>
    
    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
        Shape Your Future in Hospitality
      </h1>
      <p class="text-xl md:text-2xl text-white mb-8">
        Premier hotel management education at Itahari Namuna College
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="/courses" 
          class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition duration-300"
        >
          Explore Courses
        </a>
        <a 
          href="/contact" 
          class="px-6 py-3 bg-transparent border-2 border-white text-white hover:bg-white hover:text-gray-900 font-medium rounded-lg transition duration-300"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center p-6 bg-white rounded-lg shadow-md">
          <p class="text-4xl font-bold text-blue-600 mb-2"><span id="yearsExp">0</span>+</p>
          <p class="text-lg text-gray-700">Years Experience</p>
        </div>
        <div class="text-center p-6 bg-white rounded-lg shadow-md">
          <p class="text-4xl font-bold text-blue-600 mb-2"><span id="graduates">0</span>+</p>
          <p class="text-lg text-gray-700">Graduates</p>
        </div>
        <div class="text-center p-6 bg-white rounded-lg shadow-md">
          <p class="text-4xl font-bold text-blue-600 mb-2"><span id="partners">0</span>+</p>
          <p class="text-lg text-gray-700">Industry Partners</p>
        </div>
        <div class="text-center p-6 bg-white rounded-lg shadow-md">
          <p class="text-4xl font-bold text-blue-600 mb-2"><span id="instructors">0</span>+</p>
          <p class="text-lg text-gray-700">Certified Instructors</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Courses Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Our Featured Programs</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
          <div class="h-48 bg-gray-300 bg-cover bg-center" 
               style="background-image: url('/images/course-diploma.jpg')">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Diploma in Hotel Management</h3>
            <p class="text-gray-600 mb-4">2 Years • Practical-focused curriculum</p>
            <a 
              href="/courses/1" 
              class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center"
            >
              Learn more
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
        <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
          <div class="h-48 bg-gray-300 bg-cover bg-center" 
               style="background-image: url('/images/course-bachelor.jpg')">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">BHM Program</h3>
            <p class="text-gray-600 mb-4">4 Years • With internship opportunities</p>
            <a 
              href="/courses/2" 
              class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center"
            >
              Learn more
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">What Our Students Say</h2>
      <div class="relative">
        <div id="testimonial1" class="opacity-100">
          <div class="bg-white p-8 rounded-lg shadow-md">
            <div class="flex items-center mb-6">
              <img 
                src="/images/student1.jpg" 
                alt="Anita Shrestha" 
                class="w-16 h-16 rounded-full object-cover mr-4"
              />
              <div>
                <h4 class="font-bold text-lg">Anita Shrestha</h4>
                <p class="text-gray-600">BHM Graduate, 2022</p>
              </div>
            </div>
            <p class="text-gray-700 italic">"The practical training at INC gave me the confidence to excel at my job at Hyatt Regency."</p>
          </div>
        </div>
        <div id="testimonial2" class="opacity-0 absolute top-0 left-0">
          <div class="bg-white p-8 rounded-lg shadow-md">
            <div class="flex items-center mb-6">
              <img 
                src="/images/student2.jpg" 
                alt="Rohan Karki" 
                class="w-16 h-16 rounded-full object-cover mr-4"
              />
              <div>
                <h4 class="font-bold text-lg">Rohan Karki</h4>
                <p class="text-gray-600">Diploma Student</p>
              </div>
            </div>
            <p class="text-gray-700 italic">"The industry exposure and guest lectures from hotel managers are invaluable."</p>
          </div>
        </div>
        <div class="flex justify-center mt-8 space-x-2">
          <button
            onclick="showTestimonial(0)"
            class="w-3 h-3 rounded-full bg-blue-600"
            aria-label="Go to testimonial 1"
          ></button>
          <button
            onclick="showTestimonial(1)"
            class="w-3 h-3 rounded-full bg-gray-300"
            aria-label="Go to testimonial 2"
          ></button>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-700 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Start Your Hospitality Journey?</h2>
      <p class="text-xl mb-8">Join our next intake and take the first step toward an exciting career in hotel management.</p>
      <a 
        href="/apply" 
        class="inline-block px-8 py-3 bg-white text-blue-700 font-bold rounded-lg hover:bg-gray-100 transition duration-300"
      >
        Apply Now
      </a>
    </div>
  </section>

  <script>
    // Animate statistics
    function animateValue(id, start, end, duration) {
      let startTimestamp = null;
      const element = document.getElementById(id);
      const step = (timestamp) => {
        if (!startTimestamp) startTimestamp = timestamp;
        const progress = Math.min((timestamp - startTimestamp) / duration, 1);
        element.innerHTML = Math.floor(progress * (end - start) + start);
        if (progress < 1) {
          window.requestAnimationFrame(step);
        }
      };
      window.requestAnimationFrame(step);
    }

    // Start all animations after page load
    window.onload = function() {
      animateValue("yearsExp", 0, 15, 2000);
      animateValue("graduates", 0, 1200, 2000);
      animateValue("partners", 0, 45, 2000);
      animateValue("instructors", 0, 28, 2000);
      
      // Auto-rotate testimonials
      setInterval(rotateTestimonials, 5000);
    };

    // Testimonial rotation
    let currentTestimonial = 0;
    const testimonials = document.querySelectorAll('[id^="testimonial"]');

    function showTestimonial(index) {
      testimonials.forEach((testimonial, i) => {
        testimonial.classList.toggle('opacity-0', i !== index);
        testimonial.classList.toggle('opacity-100', i === index);
      });
      
      // Update buttons
      document.querySelectorAll('[onclick^="showTestimonial"]').forEach((btn, i) => {
        btn.classList.toggle('bg-blue-600', i === index);
        btn.classList.toggle('bg-gray-300', i !== index);
      });
      
      currentTestimonial = index;
    }

    function rotateTestimonials() {
      currentTestimonial = (currentTestimonial + 1) % testimonials.length;
      showTestimonial(currentTestimonial);
    }
  </script>
</body>
</html>
    
    
