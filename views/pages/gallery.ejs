<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Gallery - Hotel Management System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              600: '#2563eb',
              700: '#1d4ed8',
            },
            secondary: {
              600: '#7c3aed',
              700: '#6d28d9',
            }
          }
        }
      }
    }
  </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .gallery-item {
      transition: all 0.3s ease;
    }
    .gallery-item:hover {
      transform: scale(1.02);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }
    .category-btn {
      transition: all 0.3s ease;
    }
    .category-btn.active {
      background-color: rgb(29 78 216);
      color: white;
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex flex-col">
    
    <!-- Include Navbar -->
    <%- include('../partials/navbar.ejs') %>

    <!-- Main Content Area -->
    <div class="flex-1 flex flex-col md:flex-row overflow-hidden">

      <!-- Optional Sidebar if needed -->
      <!-- <div class="hidden md:block w-64 bg-primary-700 text-white">Sidebar</div> -->

      <!-- Page Content -->
      <main class="flex-1 overflow-y-auto p-6">
          <!-- <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-800">Gallery</h1>
            <div class="flex items-center space-x-4">
              <button class="p-2 text-gray-600 hover:text-primary-600">
                <i class="fas fa-bell"></i>
              </button>
              <img class="w-9 h-9 rounded-full border-2 border-primary-600" 
                   src="https://ui-avatars.com/api/?name=John+Doe&background=random" alt="User">
            </div>
          </div>
        </header> --> 

<!-- Gallery Grid -->
<div class="grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
  <% images.forEach(function(gallery){ %>
    <!-- Gallery Item -->
    <div class="gallery-item bg-white rounded-lg overflow-hidden shadow">
      <img src="<%- gallery.image %>" alt="Kitchen Lab" class="w-full h-48 object-cover">
      <div class="p-4">
        <h3 class="font-medium text-gray-800"><%- gallery.title %></h3>
        <p class="text-sm text-gray-500 mt-1"><%- gallery.date %></p>
        <div class="mt-3 flex items-center">
          <i class="fas fa-heart text-red-500 mr-2"></i><span class="text-sm text-gray-600">24 likes</span>
        </div>
      </div>
    </div>
  <% }) %>
</div>
         

  <script>
    // Filter active state toggle
    document.querySelectorAll('.category-btn').forEach(btn => {
      btn.addEventListener('click', function () {
        document.querySelectorAll('.category-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        // Add filtering logic here if needed
      });
    });
  </script>
</body>
</html>
